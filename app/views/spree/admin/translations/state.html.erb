<% content_for :page_title do %>
  <%= Spree.t(:editing_resource, resource: Spree::State.model_name.human) %> <span class="green">"<%= @state.name %>"</span>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:back_to_resource_list, resource: Spree::State.model_name.human), spree.admin_country_states_path(@state.country), class: 'btn-primary', icon: 'arrow-left' %>
<% end %>

<%= render 'settings' %>

<div class="row translations">
  <div class="col-md-4">
    <%= render 'fields' %>
  </div>
  <div class="col-md-8">
    <%= form_for [:admin, @resource.country, @resource], as: :state do |f| %>
      <%= render 'form_fields', f: f %>
      <%= render 'spree/admin/shared/edit_resource_links' %>
    <% end %>
  </div>
</div>
